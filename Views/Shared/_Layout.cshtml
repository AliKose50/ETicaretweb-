<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KBCFK7L5"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <header>
        <nav class="navbar navbar-expand-lg bg-white sticky-top shadow-sm py-3">
            <div class="container">

                <!-- Logo + Marka İsmi -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/flogo.png" alt="Logo" class="me-2" style="height: 40px; width: auto;">
                    <h1 class="h5 mb-0 fw-bold text-dark">Kecelerimizikacirdik</h1>
                </a>

                <!-- Menü Butonu -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menü Linkleri -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                    <div class="navbar-nav gap-2">
                        <a class="nav-link text-dark fw-semibold px-3 position-relative nav-hover" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <a class="nav-link text-dark fw-semibold px-3 position-relative nav-hover" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        <a class="nav-link text-dark fw-semibold px-3 position-relative nav-hover" asp-controller="Pages" asp-action="Products">Ürünler</a>
                        <a class="nav-link text-dark fw-semibold px-3 position-relative nav-hover" asp-controller="Pages" asp-action="Contact">İletişim</a>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="container-fluid bg-dark text-secondary py-4">
        <div class="container">
            <div class="row justify-content-between align-items-start">
                <!-- İletişim Bölümü -->
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-light mb-3 fw-bold">Bizimle İletişime Geçin</h5>
                    <p class="small mb-2">El yapımı taş tozu ürünlerimiz hakkında bilgi almak ve sipariş vermek için bize ulaşabilirsiniz.</p>
                    <p class="small mb-1"><i class="fa fa-map-marker-alt text-primary me-2"></i> İsparta/Merkez, Türkiye</p>
                    <p class="small"><i class="fa fa-envelope text-primary me-2"></i> kecelerimizikacirdik@hotmail.com</p>
                </div>

                <!-- Hızlı Alışveriş -->
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-light mb-3 fw-bold">Hızlı Erişim</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a class="text-secondary text-decoration-none" asp-controller="Home" asp-action="Index"><i class="fa fa-home me-2"></i>Anasayfa</a></li>
                        <li class="mb-2"><a class="text-secondary text-decoration-none" asp-controller="Home" asp-action="Privacy"><i class="fa fa-info-circle me-2"></i>Hakkımızda</a></li>
                        <li class="mb-2"><a class="text-secondary text-decoration-none" asp-controller="Pages" asp-action="Products"><i class="fa fa-box me-2"></i>Ürünler</a></li>
                        <li><a class="text-secondary text-decoration-none" asp-controller="Pages" asp-action="Contact"><i class="fa fa-phone-alt me-2"></i>İletişim</a></li>
                    </ul>
                </div>

                <!-- Sosyal Medya -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-3 fw-bold">Bizi Takip Edin</h5>
                    <a class="btn btn-outline-light btn-sm rounded-circle me-2" href="https://www.instagram.com/p/DJBMFaWsuCq/">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
